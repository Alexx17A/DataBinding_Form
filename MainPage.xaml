<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DataBinding.MainPage">
    <ScrollView>
        <VerticalStackLayout>
            <Button Text="Ir al Formulario"
                    Clicked="Button_Clicked"
                    Margin="10" />

            <CollectionView
                ItemsSource="{Binding Personas}"
                Margin="10">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="Gray"
                               CornerRadius="10"
                               Padding="10"
                               Margin="5"
                               BackgroundColor="#F9F9F9"
                               HasShadow="True">
                            <Grid ColumnSpacing="10" 
                                  RowSpacing="10">
                                <!-- Definicion de Filas -->
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Definicion de Columnas -->
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!--ID -->
                                <Label Text="ID:" 
                                       FontAttributes="Bold"
                                       TextColor="Black" 
                                       Grid.Row="0" 
                                       Grid.Column="0"/>
                                <Label Text="{Binding id}" 
                                       TextColor="Black" 
                                       Grid.Row="0" 
                                       Grid.Column="1"/>

                                <!--Nombre-->
                                <Label Text="Nombre:" 
                                       FontAttributes="Bold"
                                       TextColor="Black" 
                                       Grid.Row="1" 
                                       Grid.Column="0"/>
                                <Label Text="{Binding nombre}" 
                                       TextColor="Black" 
                                       Grid.Row="1" 
                                       Grid.Column="1"/>

                                <!--Apellido-->
                                <Label Text="Apellido:" 
                                       FontAttributes="Bold"
                                       TextColor="Black" 
                                       Grid.Row="2" 
                                       Grid.Column="0"/>
                                <Label Text="{Binding apellido}" 
                                       TextColor="Black" 
                                       Grid.Row="2" 
                                       Grid.Column="1"/>

                                <!--Sexo-->
                                <Label Text="Sexo:" 
                                       FontAttributes="Bold"
                                       TextColor="Black" 
                                       Grid.Row="3" 
                                       Grid.Column="0"/>
                                <Label Text="{Binding sexo}" 
                                       TextColor="Black" 
                                       Grid.Row="3" 
                                       Grid.Column="1"/>

                                <!--Fecha de nacimiento-->
                                <Label Text="Fecha de Nacimiento:" 
                                       FontAttributes="Bold"
                                       TextColor="Black" 
                                       Grid.Row="4" 
                                       Grid.Column="0"/>
                                <Label Text="{Binding fh_nac}" 
                                       TextColor="Black" 
                                       Grid.Row="4" 
                                       Grid.Column="1"/>

                                <!--Rol-->
                                <Label Text="Rol:" 
                                       FontAttributes="Bold"
                                       TextColor="Black" 
                                       Grid.Row="5" 
                                       Grid.Column="0"/>
                                <Label Text="{Binding rol}" 
                                       TextColor="Black" 
                                       Grid.Row="5" 
                                       Grid.Column="1"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
